<?xml version="1.0"?>
<config>
    <tabs>
        <badata_yandexexport translate="label" module="badata_yandexexport">
            <label>Yandex</label>
            <sort_order>205</sort_order>
        </badata_yandexexport>
    </tabs>
    <sections>
        <badata_yandexexport translate="label" module="badata_yandexexport">
            <label>Yandex Export Config</label>
            <tab>badata_yandexexport</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <comment>
                                <![CDATA[This will enable this module]]></comment>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <feed_name translate="label comment">
                            <label>Feed name</label>
                            <comment>
                                <![CDATA[Please, enter a name for magazine in Yandex feed.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </feed_name>
                        <store translate="label comment">
                            <label>Stores</label>
                            <frontend_type>select</frontend_type>
                            <comment><![CDATA[Select stores, please]]></comment>
                            <source_model>badata_yandexexport/config_stores</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store>
                        <catsid translate="label">
                            <label>Root category</label>
                            <frontend_type>select</frontend_type>
                            <source_model>badata_yandexexport/config_categories</source_model>
                            <comment>Select root category for export</comment>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </catsid>
                    </fields>
                </general>
            </groups>
        </badata_yandexexport>
    </sections>
</config>
